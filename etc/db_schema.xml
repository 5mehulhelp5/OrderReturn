<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="rma_request" resource="default" engine="innodb" comment="Return Merchandise Authorization">
        <column xsi:type="int"
                name="id"
                unsigned="false"
                nullable="false"
                identity="true"
                comment="ID"
        />
        <column xsi:type="text"
                name="return_request_id"
                comment="Return Request Id"
        />
        <column xsi:type="text"
                name="status"
                comment="Request Status"
        />


        <constraint xsi:type="unique" referenceId="RMA_REQUEST_RETURN_REQUEST_ID_STORE_ID">
            <column name="return_request_id"/>
            <column name="store_id"/>
        </constraint>
        <index referenceId="RMA_REQUEST_STATUS" indexType="btree">
            <column name="status"/>
        </index>
    </table>
</schema>
